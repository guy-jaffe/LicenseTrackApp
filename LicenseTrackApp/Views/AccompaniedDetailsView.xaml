<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LicenseTrackApp.Views.AccompaniedDetailsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AccompaniedDetailsView">

    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*,*">
        <RoundRectangle
            Grid.Row="0"
            Grid.Column="1"
            BackgroundColor="Transparent"
            CornerRadius="50"
            HeightRequest="50"
            WidthRequest="50" />
        <Label Grid.Row="0" Grid.Column="0" Text="{Binding morningDays}"></Label>

        <RoundRectangle
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="Transparent"
            CornerRadius="50"
            HeightRequest="50"
            WidthRequest="50" />
        <Label Grid.Row="0" Grid.Column="1" Text="{Binding nightDays}"></Label>


        <Label Grid.Row="1" Grid.Column="1" Text="מלווה יום"></Label>
        <Label Grid.Row="1" Grid.Column="0" Text="מלווה לילה"></Label>

        <Label Grid.Row="2" Grid.Column="1" Text="תאריך קבלת הרישיון:"></Label>
        <Label Grid.Row="2" Grid.Column="0" Text="{Binding earningLicenseDate}"></Label>

        <Label Grid.Row="3" Grid.Column="1" Text="תאריך סיום נהג צעיר:"></Label>
        <Label Grid.Row="3" Grid.Column="0" Text="{Binding finishNewDriverDate}"></Label>

    </Grid>

</ContentPage>