<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LicenseTrackApp.Views.TeacherDrivingLessonsView"
             xmlns:viewmodels="clr-namespace:LicenseTrackApp.ViewModels"
             Title="שיעורי הנהיגה - מורה"
             FlowDirection="RightToLeft"
             BackgroundColor="#F5F9FC">

    <Grid>
        <!-- רקע דקורטיבי -->
        <BoxView 
            Grid.Row="0"
            HeightRequest="180"
            HorizontalOptions="Fill"
            VerticalOptions="Start"
            BackgroundColor="#1A75BC"
            Opacity="0.9" />

        <Path Fill="#1C8AD9" 
              Opacity="0.3"
              Data="M0,150 C150,200 300,110 400,180 L400,0 L0,0 Z" />

        <ScrollView>
            <VerticalStackLayout Padding="20">
                <!-- כותרת ראשית -->
                <Frame BackgroundColor="#FFFFFF" 
                       CornerRadius="15" 
                       Margin="0,10,0,20"
                       HasShadow="True"
                       BorderColor="#E5E7F1"
                       Padding="15">
                    <StackLayout>
                        <Label 
                            Text="ניהול שיעורי נהיגה"
                            FontSize="28"
                            FontAttributes="Bold"
                            TextColor="#1A75BC"
                            HorizontalOptions="Center"
                            Margin="0,10,0,5"/>

                        <Label 
                            Text="מעקב אחר לוח הזמנים שלך"
                            FontSize="16"
                            TextColor="#6D7B92"
                            HorizontalOptions="Center"
                            Margin="0,0,0,5"/>
                    </StackLayout>
                </Frame>

                <!-- כפתור שיעורים קודמים -->
                <Frame BackgroundColor="#FFFFFF"
                       CornerRadius="20"
                       Margin="0,10,0,20"
                       HasShadow="True"
                       BorderColor="#E5E7F1"
                       Padding="15">
                    <Button
                        Command="{Binding PreviousDrivingLessonsCommand}"
                        Text="צפייה בשיעורים קודמים"
                        BackgroundColor="#4CA3E0"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="50">
                        <Button.Shadow>
                            <Shadow Brush="#192F6C" Offset="0,2" Radius="4" Opacity="0.3" />
                        </Button.Shadow>
                    </Button>
                </Frame>

                <!-- רשימת השיעורים הקרובים -->
                <Frame BackgroundColor="#FFFFFF"
                       CornerRadius="20"
                       Margin="0,10,0,15"
                       HasShadow="True"
                       BorderColor="#E5E7F1"
                       Padding="15">
                    <StackLayout>
                        <Label 
                            Text="השיעורים הקרובים"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="#2C3E50"
                            HorizontalOptions="Start"
                            Margin="5,0,0,15" />

                        <CollectionView
                            x:Name="cv"
                            ItemsSource="{Binding Lessons}"
                            SelectionMode="None">
                            <CollectionView.EmptyView>
                                <StackLayout Padding="20">
                                    <Label
                                        Text="אין שיעורים קרובים להצגה"
                                        FontSize="18"
                                        TextColor="#6D7B92"
                                        HorizontalOptions="Center" />
                                </StackLayout>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Padding="5,5,5,15">
                                        <Frame 
                                            BackgroundColor="#FFFFFF"
                                            CornerRadius="15"
                                            HasShadow="True"
                                            BorderColor="#E5E7F1"
                                            Padding="0">
                                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto" Padding="15">
                                                <Frame
                                                    Grid.RowSpan="3"
                                                    BackgroundColor="#E6F7FF"
                                                    BorderColor="#1A75BC"
                                                    CornerRadius="60"
                                                    HeightRequest="60"
                                                    WidthRequest="60"
                                                    Padding="0"
                                                    Margin="0,0,15,0">
                                                    <Image
                                                        Source="calender.png"
                                                        HorizontalOptions="Center"
                                                        VerticalOptions="Center" />
                                                </Frame>

                                                <Label
                                                    Grid.Column="1"
                                                    Text="{Binding StudentName, StringFormat='תלמיד: {0}'}"
                                                    FontSize="18"
                                                    FontAttributes="Bold"
                                                    TextColor="#2C3E50"
                                                    Margin="0,0,0,5" />

                                                <Label
                                                    Grid.Column="1" 
                                                    Grid.Row="1"
                                                    Text="{Binding LessonDate, StringFormat='תאריך: {0:dd/MM/yyyy}'}"
                                                    FontSize="16"
                                                    TextColor="#6D7B92"
                                                    Margin="0,0,0,5" />

                                                <Label
                                                    Grid.Column="1" 
                                                    Grid.Row="2"
                                                    Text="{Binding LessonTime, StringFormat='שעה: {0:hh\\:mm}'}"
                                                    FontSize="16"
                                                    TextColor="#6D7B92"
                                                    Margin="0,0,0,10" />

                                                <Button
                                                    Grid.Column="1"
                                                    Grid.Row="3"
                                                    Command="{Binding Source={x:Reference cv}, Path=BindingContext.DeleteLessonCommand}"
                                                    CommandParameter="{Binding}"
                                                    Text="ביטול שיעור"
                                                    BackgroundColor="#FFFFFF"
                                                    TextColor="#E74C3C"
                                                    BorderColor="#E74C3C"
                                                    BorderWidth="1"
                                                    FontSize="14"
                                                    CornerRadius="8"
                                                    HeightRequest="40"
                                                    HorizontalOptions="Start"
                                                    Padding="15,0" />
                                            </Grid>
                                        </Frame>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>