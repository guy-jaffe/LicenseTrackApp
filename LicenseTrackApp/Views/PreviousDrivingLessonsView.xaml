<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LicenseTrackApp.Views.PreviousDrivingLessonsView"
             xmlns:viewmodels="clr-namespace:LicenseTrackApp.ViewModels"
             xmlns:converters="clr-namespace:LicenseTrackApp.Converters"
             Title="שיעורים קודמים"
             FlowDirection="RightToLeft"
             BackgroundColor="#F5F9FC">
    <Grid>
        <!-- רקע דקורטיבי -->
        <BoxView 
            Grid.Row="0"
            HeightRequest="180"
            HorizontalOptions="Fill"
            VerticalOptions="Start"
            BackgroundColor="#1A75BC"
            Opacity="0.9" />

        <Path Fill="#1C8AD9" 
              Opacity="0.3"
              Data="M0,150 C150,200 300,110 400,180 L400,0 L0,0 Z" />

        <ScrollView>
            <VerticalStackLayout Padding="20">
                <!-- כותרת ראשית -->
                <Frame BackgroundColor="#FFFFFF" 
                       CornerRadius="15" 
                       Margin="0,10,0,20"
                       HasShadow="True"
                       BorderColor="#E5E7F1"
                       Padding="15">
                    <StackLayout>
                        <Label 
                            Text="שיעורים קודמים"
                            FontSize="28"
                            FontAttributes="Bold"
                            TextColor="#1A75BC"
                            HorizontalOptions="Center"
                            Margin="0,10,0,5"/>

                        <Label 
                            Text="היסטוריית הלמידה שלך"
                            FontSize="16"
                            TextColor="#6D7B92"
                            HorizontalOptions="Center"
                            Margin="0,0,0,5"/>
                    </StackLayout>
                </Frame>

                <!-- רשימת השיעורים -->
                <CollectionView
                    x:Name="cv"
                    ItemsSource="{Binding Lessons}"
                    SelectionMode="None"
                    Margin="0,5,0,20">
                    <CollectionView.EmptyView>
                        <StackLayout Padding="20">
                            <Label
                                Text="אין שיעורים קודמים להצגה"
                                FontSize="18"
                                TextColor="#6D7B92"
                                HorizontalOptions="Center" />
                        </StackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Padding="5">
                                <Frame BackgroundColor="#FFFFFF"
                                       CornerRadius="15"
                                       HasShadow="True"
                                       BorderColor="#E5E7F1"
                                       Margin="0,5,0,10"
                                       Padding="0">
                                    <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto" Padding="15">
                                        <Frame
                                            Grid.RowSpan="3"
                                            BackgroundColor="#E6F7FF"
                                            BorderColor="#1A75BC"
                                            CornerRadius="60"
                                            HeightRequest="60"
                                            WidthRequest="60"
                                            Padding="0"
                                            Margin="0,0,15,0">
                                            <Image
                                                Source="tick.png"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center" />
                                        </Frame>

                                        <Label
                                            Grid.Column="1"
                                            Text="{Binding LessonDate, StringFormat='{0:dd/MM/yyyy}'}"
                                            FontSize="18"
                                            FontAttributes="Bold"
                                            TextColor="#2C3E50"
                                            Margin="0,0,0,5" />

                                        <Label
                                            Grid.Column="1" 
                                            Grid.Row="1"
                                            Text="{Binding LessonTime, StringFormat='שעה: {0:hh\\:mm}'}"
                                            FontSize="14"
                                            TextColor="#6D7B92"
                                            Margin="0,0,0,5" />

                                        <StackLayout 
                                            Grid.Column="1"
                                            Grid.Row="2">
                                            <Label
                                                Text="הערות:"
                                                FontSize="14"
                                                FontAttributes="Bold"
                                                TextColor="#2C3E50"
                                                IsVisible="{Binding Comments, Converter={StaticResource IsNotNullOrEmptyConverter}}" />
                                            <Label
                                                Text="{Binding Comments}"
                                                FontSize="14"
                                                TextColor="#6D7B92" />
                                        </StackLayout>
                                    </Grid>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>