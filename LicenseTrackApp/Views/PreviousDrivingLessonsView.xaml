<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LicenseTrackApp.Views.PreviousDrivingLessonsView"
             xmlns:viewmodels="clr-namespace:LicenseTrackApp.ViewModels"
             Title="שיעורים קודמים">
    <ScrollView>
    <VerticalStackLayout>
        <Label
    Margin="10"
    FontSize="Medium"
    HorizontalOptions="Center"
    Text="השיעורים הקודמים:" />

        <CollectionView
    x:Name="cv"
    ItemsSource="{Binding Lessons}"
    SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame>
                        <StackLayout Padding="10">
                            <Label
                        FontAttributes="Italic"
                        FontSize="Small"
                        Text="{Binding LessonDate, StringFormat='Date: {0:MM/dd/yyyy}'}" />
                            <Label
                        FontAttributes="Italic"
                        FontSize="Small"
                        Text="{Binding LessonTime, StringFormat='Time: {0:hh-mm}'}" />
                            <Label
                        FontAttributes="Italic"
                        FontSize="Small"
                        Text="{Binding Comments}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>